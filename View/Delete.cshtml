@* View de exclusão de tarefa *@
@using TodoList.Models
@model TodoTask

@{
    ViewData["Title"] = "Excluir Tarefa";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
    
    body {
        background: linear-gradient(120deg, #fdfbfb 0%, #ebedee 100%);
        font-family: 'Inter', 'Segoe UI', Arial, sans-serif;
        color: #333;
    }

    .container {
        background: #ffffff;
        border-radius: 18px;
        box-shadow: 0 4px 20px rgba(200, 200, 200, 0.15);
        padding: 36px 32px 32px 32px;
        margin-top: 48px;
        max-width: 500px;
    }

    h1 {
        color: #6d7b8d;
        font-weight: 700;
        margin-bottom: 32px;
        letter-spacing: 0.8px;
    }

    .btn-danger, .btn-secondary {
        border: none;
        border-radius: 8px;
        font-weight: 500;
        font-family: 'Inter', sans-serif;
        padding: 10px 20px;
        cursor: pointer;
    }

    .btn-danger {
        background: #fbd6d6;
        color: #8c2c2c;
    }

    .btn-danger:hover {
        background: #f5bcbc;
    }

    .btn-secondary {
        background: #dbe4ec;
        color: #445566;
    }

    .btn-secondary:hover {
        background: #cfd9e2;
    }

    .alert-warning {
        background: #fffaf0;
        color: #b08500;
        border-radius: 8px;
        border: 1px solid #ffe4b5;
        padding: 12px 16px;
        font-size: 0.95rem;
    }

</style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <!-- Exibe datas de criação e conclusão -->
        <div class="mb-3">
            <label class="form-label">Criado em:</label>
            <span>@Model.CriadoEm.ToString("dd/MM/yyyy HH:mm")</span>
        </div>
        <div class="mb-3">
            <label class="form-label">Concluído em:</label>
            <span>@(Model.ConcluidoEm.HasValue ? Model.ConcluidoEm.Value.ToString("dd/MM/yyyy HH:mm") : "-")</span>
        </div>
        <!-- Mensagem de confirmação de exclusão -->
        <div class="alert alert-warning">Tem certeza que deseja excluir a tarefa <strong>@Model.Titulo</strong>?</div>
        <!-- Formulário para confirmar exclusão -->
        <form asp-action="Delete" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">Excluir</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</body>
</html>
